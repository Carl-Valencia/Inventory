                            <a class="nav-link active" aria-current="page" href="/admin/users"><h4>Users</h4></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <h5 class="text-white">
                Logged in as: <span style="color: aqua;" id="user"><% if(user.isAdmin === 1){ %>
                    ADMIN <% } else { %> CASHIER 
                    <% } %></span>
                <button class="button btn-primary"><a href="/logout" class="text-white" style="text-decoration: none;">Logout</a></button>
            </h5>
        </div>
    </div>
</nav>
<!--Title-->
<div class="container pb-5 text-center fw-bolder"style="font-size: 3rem;">Delete a User</div>
<% if (message.length > 0) { %>
    <div class="alert alert-danger" style="width: 20rem;">
        <span class="fs-5 fw-bold">
        <%= message %>
    </span>
    </div>
<% } %>
                <form method="post" action="/delUsers/del-data">
                    <div class="row justify-content-md-center">
                        <div class="col-md-auto py-2">
                            <label for="adminID" style="font-weight: bolder; font-size: 1.3rem;">Admin ID:</label>
                            <input type="number" id="adminID" style="width: 5rem; font-weight: bolder; font-size: 1.3rem;" name="adminID">
                        </div>
                    </div>
                    <div class="row justify-content-md-center py-2">
                        <div class="col-md-auto">
                            <button type="submit" class="btn btn-danger">
                                &ensp;&ensp;&ensp;DELETE&ensp;&ensp;&ensp;
                            </button>
                        </div>
                    </div>
                </form>
                
                <div class="table-responsive" style="padding-left: 15rem; padding-right: 15rem;">
                    <table class="table table-bordered table-hover table-striped">
                        <thead class="thead-color">
                          <tr>
                            <th style="width: 8rem; text-align: center;">ID</th>
                            <th scope="col">Email</th>
                            <th style="width: 8rem; ">Admin</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% data.forEach(items =>{ %>
                                <tr>
                                    <th scope="row" style="text-align: center;"><%= items.id %></th>
                                    <td><%= items.email %></td>
                                    <td>
                                        <% if(items.isAdmin === 1){ %>
                                            Yes <%} else {%> No 
                                        <% } %>
                                    </td>
                                  </tr>
                            <% }) %>
                        </tbody>
                      </table>
                    </div>
                
                
                
                <!--footer-->
                <footer>
                    <div class="page-footer col-sm-12" style="margin-top: 10rem;">
                       <div class="container">
                          <hr class="rgba-white-light" style="margin: 0 15%;">
                          <div class="row d-flex text-center justify-content-center mb-md-0 mb-4">
                          </div>
                          <!-- Copyright -->
                          <div class="footer-copyright text-center py-1">Â© 2021 R&R System. All Rights Reserved</div>
                       </div>
                    </div>
                 </footer>
                </body>	
