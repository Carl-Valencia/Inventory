    </div>
</nav>
<!--Navbar ends-->
<!--Content starts-->
<div class="container py-4" style="margin-left: 5rem;">
    <h1 style="font-size: 3.5rem;">STOCKS</h1>
</div>
<div class="container-fluid-even justify-content-between mb-4 pb-4">
	<div class="row">
            <label for="inStocksList" class="col col-form-label text-nowrap fw-bold fs-5" style="flex: 0 0 0;">Search:</label>
        <div class="col">
            <input type="text" class="fs-5" list="orderIdOptions" id="inStocksList" placeholder="Type Product Code or Name" style="width: 18rem;" onkeyup="search()">
        </div>
        <div class="col"></div><div class="col"></div>
        <div class="col"></div><div class="col"></div>
        <div class="col"></div><div class="col"></div>
	</div>
</div>
<div class="table-responsive" style="padding-left: 5rem; padding-right: 5rem;">
<table class="table table-bordered table-hover table-striped" id="stocksList">
	<thead class="blackB">
	  <tr>
		<th style="width:11rem;" class="text-center fs-5">Product Code</th>
        <th scope="col" class="text-center fs-5">Product Name</th>
        <th style="width: 5rem;" class="text-center fs-5">Unit</th>
        <th style="width: 10rem;" class="text-center fs-5">Price</th>
        <th style="width: 12rem;" class="text-center fs-5 text-nowrap">Quantity Available</th>
	  </tr>
	</thead>
	<tbody id="tbody">
		<% data.forEach(items =>{ %>
            <tr class="uniquerow" id="<%=items.productCode%>">
                <th style="width:12rem;" class="text-center fs-5"><%= items.productCode %></th>
                <td scope="col" class="text-center fs-5"><%= items.productName %><span class="tag"></span></td>
                <td style="width: 5rem;" class="text-center fs-5 text-nowrap"><%= items.unit %></td>
                <td style="width: 5rem;" class="text-center fs-5 text-nowrap"><%= items.unitPrice %></td>
                <td style="width: 8rem;" class="text-center fs-5 qty"><input type="number" id="stocks" class="stocks border-0 text-center" value="<%= items.stocksLeft %>" readonly></td>
            </tr>
        <% }) %>
	</tbody>
  </table>
</div>
<footer>
	<div class="page-footer col-sm-12" style="margin-top: 10rem;">
	   <div class="container">
		  <hr class="rgba-white-light" style="margin: 0 15%;">
		  <div class="row d-flex text-center justify-content-center mb-md-0 mb-4">
		  </div>
		  <!-- Copyright -->
		  <div class="footer-copyright text-center py-1">
        Â© 2022 R&R System. All Rights Reserved
      </div>
	   </div>
	</div>
 </footer>
</body>

</html>