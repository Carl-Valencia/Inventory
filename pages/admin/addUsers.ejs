<!--Title-->
<div class="container pb-5 text-center fw-bolder"style="font-size: 3rem;">Add a User</div>
<% if (message.length > 0) { %>
    <div class="alert alert-danger" style="width: 20rem;">
        <span class="fs-5 fw-bold">
        <%= message %>
    </span>
    </div>
<% } %>
<form method="post" action="/addUsers/send-data">
        <div class="row justify-content-md-center">
            <div class="col-md-auto py-2">
                <label for="userInput" class="fw-bolder fs-3">Email:</label>
                <input type="text" id="userInput" class="fw-bolder fs-3" name="email"  autocomplete="off">
            </div>
        </div>
        <div class="row justify-content-md-center">
            <div class="col-md-auto py-2">
                <label for="passInput" class="fw-bolder fs-3">Password:</label>
                <input type="text" id="passInput" class="fw-bolder fs-3" name="password">
            </div>
        </div> 
        <div class="row justify-content-md-center">
            <div class="col-md-auto py-2">
                <label for="isAdmin" class="fw-bolder fs-3">Admin? </label>
                <input type="checkbox" style="width: 1.5rem; height: 1.5rem;" id="isAdmin" class="fw-bolder fs-3" name="isAdmin" value="1">
                <script>let y = document.getElementbyId('isAdmin'); if (y.checked==false){
                    document.getElementbyId('isAdmin').value = 0; }   
                </script>
            </div>
        </div>      
    <div class="d-flex justify-content-center pt-3">
        <button type="submit" class="btn btn-success text-white fw-bold">
            &ensp;&ensp;&ensp;+ ADD&ensp;&ensp;&ensp;
        </button>
    </div>
</form>


